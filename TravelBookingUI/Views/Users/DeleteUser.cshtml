@model TravelBookingUI.Models.ApplicationUser
@using Microsoft.AspNetCore.Identity
@using TravelBookingUI.Models
@{
    ViewData["Title"] = "ALl USers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject UserManager<ApplicationUser> UserManager

<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="bg-box p-2">
    <h4>Details</h4>
    <hr />

    
    <form asp-action="Delete" asp-route-id="@Model.LoginId">
            <dl class="row">
        <dt class = "col-sm-2">Employee Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Employee Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserTypeId)
        </dd>
        <dt class = "col-sm-2">
            Login Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LoginId)
        </dd>
        <dt class = "col-sm-2">
            Manager Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManagerUserId)
        </dd>
    </dl>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ListUsers">Back to All Users</a>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
