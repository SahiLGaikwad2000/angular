@model TravelBookingUI.Models.JourneyRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>



<div class="row bg-box">
    <h4>Travel Request</h4>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RequestId" />
            <div class="form-group">
                <label asp-for="Source" class="control-label"></label>
                <input asp-for="Source" class="form-control disabled" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <input asp-for="Destination" class="form-control disabled" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control disabled" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelDate" class="control-label"></label>
                <input asp-for="TravelDate" class="form-control disabled" id="DateRequestDeadLine" />
                <span asp-validation-for="TravelDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelMode" class="control-label"></label>
                <input asp-for="TravelMode" class="form-control disabled" />
                <span asp-validation-for="TravelMode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentStatus" class="control-label"></label>
          <select asp-for="CurrentStatus" class="form-control" autocomplete="name" aria-required="true" >
                    
                    @if(Context.Session.GetString("UserTypeId")== "MANAGER" || Context.Session.GetString("UserTypeId")== "ADMIN")
                    {
                     
                        <option value="SUBMITTED">Pending Approval</option>
                        <option value="APPROVED">Approved By Manager</option>   
                        <option value="DECLINED">Rejected By Manager</option>
                    }
                    @if (Context.Session.GetString("UserTypeId") == "TRAVEL_AGENT" || Context.Session.GetString("UserTypeId") == "ADMIN")
                    {
                        <option value="BOOKED">Booking Confirmed</option>
                        <option value="CANCELED">Booking Not Available</option>
                    }
                </select>
                <span asp-validation-for="CurrentStatus" class="text-danger"></span>
            </div>
            <div class="form-group pt-2 pb-1">
                 <input type="hidden" asp-for="RequestId" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
    <a asp-action="Index">Back to List</a>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
